&apos; Returns file path,without name, excluding trailing separator (&quot;/&quot;)
Public Function Filepath() As String
  Dim u As String
  Dim i As Long
  u = ConvertFromURL( ThisComponent.Url )
  i = InStrRev( u, GetPathSeparator() )
  Filepath = Left( u, i - 1 )
End Function
&apos; Test Filepath
Sub TestFilepath
	MsgBox Filepath(), 0, &quot;Test of Filepath&quot; 
End Sub
